@model IEnumerable<Akash_Ade.Models.ClubMember>

@{
    ViewData["Title"] = "Active Members";
}

<h1>Active Members</h1>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MemberName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MembershipCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hobby.HobbyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Society.SocietyName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemberName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hobby.HobbyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Society.SocietyName)
            </td>
            <td>
                <a href="@Url.Action("Edit", "ClubMembers", new { id = item.Id })" class="btn btn-danger text-white">Edit</a>
                <a href="@Url.Action("Details", "ClubMembers", new { id = item.Id })" class="btn btn-dark text-white">Details</a>
                <a href="@Url.Action("Delete", "ClubMembers", new { id = item.Id })" class="btn btn-primary text-white">Delete</a>

            </td>
        </tr>
    }

</table>
