@model IEnumerable<Akash_Ade.Models.Hobby>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<style>
    body {
        background-color:honeydew;
    }
</style>

<p class="btn btn-outline-info">

    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HobbyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HobbyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Hobbies", new { id = item.Id })" class="btn btn-danger text-white">Edit</a>
                <a href="@Url.Action("Details", "Hobbies", new { id = item.Id })" class="btn btn-dark text-white">Details</a>
                <a href="@Url.Action("Delete", "Hobbies", new { id = item.Id })" class="btn btn-primary text-white">Delete</a>

                @*<button type="submit" value="Details" class="btn btn-dark"> @Html.ActionLink("Details", "", new { id = item.Id })  </button>
                <button type="submit" value="EDIT" class="btn btn-info">   @Html.ActionLink("Delete", "", new { id = item.Id }) </button>*@

            </td>
        </tr>
    }

</table>
